{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true, // Allow JavaScript and JSX files
    "jsx": "react", // Specify how JSX is handled
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "checkJs": false, // Disable TypeScript checks on .js files
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
